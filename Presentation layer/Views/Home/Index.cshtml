<section id="home" class="hero-section d-flex align-items-center justify-content-center text-center text-white">
    <div class="overlay"></div>
    <div class="content fade-in">
        <h1 class="display-4 fw-bold">Welcome to <span class="text-highlight">Bella Slice</span></h1>
        <p class="lead mb-4">Delicious handmade pizzas baked with love and passion.</p>
        <a asp-action="getall" asp-controller="Product" class="btn btn-light btn-lg custom-btn">View Menu</a>
    </div>
</section>
<section id="about" class="about-section py-5">
    <div class="container">
        <div class="row align-items-center">

            <div class="col-md-6 text-center mb-4 mb-md-0">
                <img src="~/image/mainchef.PNG" alt="Chef Giovanni Rossi" class="chef-img img-fluid rounded-4 shadow-lg">
            </div>

            <div class="col-md-6 text-white">
                <h2 class="fw-bold mb-3">About Us</h2>
                <p class="lead">
                    At <span class="text-highlight">Bella Slice</span>, we believe pizza is an art.
                    Our head chef, <strong>Giovanni Rossi</strong>, brings over 20 years of experience from Naples to your plate.
                    Each pizza is made with love, tradition, and the finest Italian ingredients.
                </p>
                <p>
                    Whether you're craving a classic Margherita or an adventurous truffle pizza,
                    Bella Slice is where authentic Italian flavor meets passion and creativity.
                </p>
            </div>

        </div>
    </div>
</section>
<section id="chefs" class="chefs-section text-center py-5">
    <div class="container">
        <h2 class="section-title mb-5">🍕 Meet Our Chefs 🍕</h2>
        <div class="row justify-content-center">
            <div class="col-md-4 d-flex">
                <div class="chef-card flex-fill">
                    <img src="~/image/chef1.png" alt="Chef Mario" class="chef-photo">
                    <h4 class="mt-3 text-orange">Chef Mario Rossi</h4>
                    <p class="text-white">Specialty: Margherita Pizza</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="chef-card">
                    <img src="~/image/chef2.png" alt="Chef Lucia" class="chef-photo">
                    <h4 class="mt-3 text-orange">Chef Lucia Romano</h4>
                    <p class="text-white">Specialty: Pepperoni Pizza</p>
                </div>
            </div>
            <div class="col-md-4 mb-4">
                <div class="chef-card">
                    <img src="~/image/chef3.png" alt="Chef Antonio" class="chef-photo">
                    <h4 class="mt-3 text-orange">Chef Antonio Bianchi</h4>
                    <p class="text-white">Specialty: Four Cheese Pizza</p>
                </div>
            </div>
        </div>
    </div>
</section>
