@model IEnumerable<DAL.Entity.Category>

@{
    ViewData["Title"] = "Index";
}

<div class="container py-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h1 class="h3 mb-0">Categories</h1>
        <a asp-action="Create" class="btn btn-light custom-btn">Create New</a>
    </div>

    @if (!(Model != null && Model.Any()))
    {
        <div class="alert alert-info">No categories found.</div>
    }

    <div class="table-responsive">
        <table class="table align-middle">
            <thead class="table-dark">
                <tr>
                    <th style="width: 60px;">#</th>
                    <th>Name</th>
                    <th style="width:260px;"></th>
                </tr>
            </thead>
            <tbody>
@foreach (var item in Model ?? Enumerable.Empty<DAL.Entity.Category>()) {
        <tr>
            <td class="text-dark">@item.Id</td>
                        <td class="text-dark">@(!string.IsNullOrWhiteSpace(item?.Name) ? item.Name : "(no name)")</td>
            <td>
                <div class="btn-group" role="group" aria-label="Actions">
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-light custom-btn me-2">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-light custom-btn me-2">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-light custom-btn text-danger" onclick="return confirm('Are you sure you want to delete this category?');">Delete</a>
                </div>
            </td>
        </tr>
}
            </tbody>
        </table>
    </div>
</div>
